type Concept {
  id: ID! @id
  name: String!
  description: String
  # user: User! @relation(link: INLINE)
  official: Boolean! @default(value: false)
  linksFromConcept: [Link!]! @relation(name: "From")
  linksToConcept: [Link!]! @relation(name: "To")
  courses: [Course!]! @relation(name: "Courses")
  resources: [Resource!]!
  asPrerequisite: [Course!]! @relation(name:"Prerequisite")
  asLearningObjective: [Course!]! @relation(name:"LearningObjective")
}

type Resource {
  id: ID! @id
  concept: Concept!
  name: String!
  description: String!
  urls: [URL!]!
}

type URL {
  id: ID! @id
  address: String!
  resource: Resource!
}

type Link {
  id: ID! @id
  from: Concept! @relation(link: INLINE, name: "From")
  to: Concept! @relation(link: INLINE, name: "To")
  # user: User! @relation(link: INLINE)
  official: Boolean! @default(value: false)
}